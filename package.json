{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "scripts": {
    "build": "babel -d ./dist ./src  --copy-files --source-maps inline",
    "clean": "rm -rf ./build",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "db-create": "sequelize db:create",
    "db-create:test": "NODE_ENV=test sequelize db:create",
    "db-drop": "sequelize db:drop",
    "db-drop:test": "NODE_ENV=test sequelize db:drop",
    "db-migrate": "./node_modules/.bin/babel-node ./node_modules/.bin/sequelize db:migrate",
    "db-migrate:test": "NODE_ENV=test ./node_modules/.bin/babel-node ./node_modules/.bin/sequelize db:migrate",
    "db-migrate:undo": "./node_modules/.bin/babel-node ./node_modules/.bin/sequelize db:migrate:undo:all",
    "db-migrate:undo:test": "NODE_ENV=test ./node_modules/.bin/babel-node ./node_modules/.bin/sequelize db:migrate:undo:all",
    "db-refresh": "npm run db-migrate:undo && npm run db-migrate && npm run db-seed",
    "db-refresh:test": "NODE_ENV=test npm run db-migrate:undo:test && npm run db-migrate:test && npm run db-seed:test",
    "db-seed": "./node_modules/.bin/babel-node ./node_modules/.bin/sequelize db:seed:all",
    "db-seed:test": "NODE_ENV=test ./node_modules/.bin/babel-node ./node_modules/.bin/sequelize db:seed:all",
    "dev": "nodemon --exec babel-node src/index.js",
    "heroku-prebuild": "if test \"$PRODUCTION_STAGE\" = false ; then npm install; npm run db-refresh ; fi; npm run migrate; npm run prod",
    "lint": "eslint ./src",
    "lint-fix": "eslint ./src --fix",
    "prod": "npm run clean && npm run build",
    "start": "node dist/index.js",
    "test": "npm run db-refresh:test && NODE_ENV=test nyc mocha --require @babel/register  tests/**/*.js --timeout 20000 --exit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint-fix",
      "git add --force"
    ],
    "*.json": [
      "prettier --write",
      "git add --force"
    ]
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cloudinary": "^1.14.0",
    "connect-session-sequelize": "^6.0.0",
    "cors": "^2.8.4",
    "engine.io": "^3.3.2",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "handlebars": "^4.1.2",
    "html-to-text": "^5.1.1",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.1",
    "nock": "^10.0.6",
    "node-fetch": "^2.3.0",
    "nodemailer": "^6.1.0",
    "nodemailer-sendgrid": "^1.0.3",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "passport-twitter": "^1.0.4",
    "pg": "^7.9.0",
    "pg-hstore": "^2.3.2",
    "randomstring": "^1.1.5",
    "reading-time-estimator": "^1.0.3",
    "sequelize": "^5.15.1",
    "sequelize-cli": "^5.4.0",
    "slugify": "^1.3.4",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "stringz": "^1.0.0",
    "swagger-ui-express": "^4.0.2",
    "underscore": "^1.9.1",
    "uuid": "^3.3.2",
    "validator": "^10.11.0",
    "validatorjs": "^3.15.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.2",
    "@babel/register": "^7.4.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-polyfill": "^6.26.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.1.0",
    "prettier": "^1.16.4",
    "sinon": "^7.3.1"
  }
}
