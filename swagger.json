{
  "openapi": "3.0.1",
  "info": {
    "title": "Authors Haven",
    "description": "A Social platform for the creative at heart.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://authors-haven.herokuapp.com/api/v1"
    }
  ],
  "tags": [
    {
      "name": "user",
      "description": "Users should be able to create an account"
    }
  ],
  "paths": {
    "/auth/signup": {
      "post": {
        "tags": ["user"],
        "summary": "This API allow user to create an account",
        "description": "This action is needed for a user to be authenticated",
        "operationId": "createUser",
        "requestBody": {
          "description": "Created user object",
          "content": {
            "*/*": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          },
          "required": true
        },
        "responses": {
          "default": {
            "description": "Account was created successfully",
            "content": {}
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "full_name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "bio": {
            "type": "string"
          },
          "image_url": {
            "type": "string"
          },
          "notification": {
            "type": "boolean"
          },
          "role": {
            "type": "string",
            "enum": ["user", "author", "admin"]
          }
        }
      },
      "ApiResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
